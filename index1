<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Thu Ngân - Karaoke</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body { font-family: Arial, sans-serif; background: #f9f9f9; padding: 20px; }
    h2 { color: #333; }
    .form-box { background: white; padding: 15px; border-radius: 8px; box-shadow: 0 2px 6px rgba(0,0,0,0.1); max-width: 400px; margin: auto; }
    input, button { width: 100%; padding: 10px; margin: 8px 0; border-radius: 6px; border: 1px solid #ccc; }
    button { background: #28a745; color: white; border: none; cursor: pointer; }
    button:hover { background: #218838; }
    .msg { margin-top: 10px; font-weight: bold; }
  </style>
</head>
<body>
  <h2>Thu Ngân - Nhập số tiền</h2>
  <div class="form-box">
    <input type="text" id="roomName" placeholder="Tên phòng (ví dụ: Phòng 101)">
    <input type="number" id="amount" placeholder="Số tiền (VND)">
    <button onclick="addRoom()">Thêm phòng</button>
    <div class="msg" id="msg"></div>
  </div>

  <script>
    const API = "https://script.google.com/macros/s/AKfycbyzfRB-aEGHX5Dq9C9_I30E9Mi5HDezEEghsMJDItFDoK-P99w2PiLHkLjSH41SKeJY/exec";

    function addRoom() {
      const name = document.getElementById("roomName").value.trim();
      const amount = document.getElementById("amount").value.trim();
      if (!name || !amount) {
        document.getElementById("msg").innerText = "⚠️ Nhập đầy đủ thông tin!";
        return;
      }

      fetch(`${API}?action=add&name=${encodeURIComponent(name)}&amount=${amount}`)
        .then(res => res.text())
        .then(txt => {
          document.getElementById("msg").innerText = "✅ Đã thêm phòng!";
          document.getElementById("roomName").value = "";
          document.getElementById("amount").value = "";
        })
        .catch(err => {
          document.getElementById("msg").innerText = "❌ Lỗi khi thêm phòng!";
          console.error(err);
        });
    }
  </script>
</body>
</html>
