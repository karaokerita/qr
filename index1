<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Thu Ngân - Karaoke</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body { font-family: Arial; background: #f0f0f0; text-align: center; }
    .card {
      background: white; padding: 20px; margin: 20px auto;
      width: 90%; max-width: 600px; border-radius: 15px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
    table { width: 100%; border-collapse: collapse; margin-top: 15px; }
    th, td { border: 1px solid #ccc; padding: 8px; }
    input { width: 80px; text-align: right; }
    button { padding: 5px 10px; margin: 5px; }
  </style>
</head>
<body>
  <h2>Thu Ngân - Nhập số tiền</h2>
  <div class="card">
    <table id="roomTable">
      <tr><th>Phòng</th><th>Số tiền</th><th>Trạng thái</th><th>Hành động</th></tr>
    </table>
  </div>

<script>
const API_URL = "https://script.google.com/macros/s/AKfycbyzfRB-aEGHX5Dq9C9_I30E9Mi5HDezEEghsMJDItFDoK-P99w2PiLHkLjSH41SKeJY/exec";

// Load danh sách phòng
async function loadRooms() {
  let res = await fetch(API_URL);
  let data = await res.json();

  let table = document.getElementById("roomTable");
  table.innerHTML = "<tr><th>Phòng</th><th>Số tiền</th><th>Trạng thái</th><th>Hành động</th></tr>";

  for (let i = 1; i < data.length; i++) {
    let room = data[i][0];
    let amount = data[i][1];
    let status = data[i][2];

    let row = document.createElement("tr");
    row.innerHTML = `
      <td>${room}</td>
      <td><input type="number" id="amt_${room}" value="${amount}"></td>
      <td>${status}</td>
      <td>
        <button onclick="updateRoom('${room}')">Cập nhật</button>
        <button onclick="markPaid('${room}')">Đã thanh toán</button>
      </td>
    `;
    table.appendChild(row);
  }
}

// Cập nhật số tiền
async function updateRoom(room) {
  let amount = document.getElementById("amt_" + room).value;
  await fetch(API_URL, {
    method: "POST",
    body: JSON.stringify({ action: "update", room: room, amount: amount })
  });
  loadRooms();
}

// Đánh dấu đã thanh toán
async function markPaid(room) {
  await fetch(API_URL, {
    method: "POST",
    body: JSON.stringify({ action: "paid", room: room })
  });
  loadRooms();
}

loadRooms();
setInterval(loadRooms, 5000); // refresh tự động 5s/lần
</script>
</body>
</html>
