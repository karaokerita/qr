<script>
// üëâ Thay link n√†y b·∫±ng link exec c·ªßa b·∫°n
const API_URL = "https://script.google.com/macros/s/AKfycbyzfRB-aEGHX5Dq9C9_I30E9Mi5HDezEEghsMJDItFDoK-P99w2PiLHkLjSH41SKeJY/exec";

async function saveAmount() {
  const room = document.getElementById("room").value;
  const amount = document.getElementById("amount").value;

  if (!amount) return alert("Vui l√≤ng nh·∫≠p s·ªë ti·ªÅn!");

  await fetch(API_URL, {
    method: "POST",
    body: JSON.stringify({ action: "setAmount", room: room, amount: amount })
  });

  alert("‚úÖ ƒê√£ l∆∞u s·ªë ti·ªÅn cho " + room);
  loadRooms();
}

async function loadRooms() {
  const res = await fetch(API_URL);
  const data = await res.json();

  const list = document.getElementById("roomList");
  list.innerHTML = "<h3>üìã Danh s√°ch ph√≤ng:</h3>";

  data.slice(1).forEach(row => {
    const [room, amount, status] = row;
    if (room) {
      list.innerHTML += `<div>${room}: ${amount || 0} ƒë (${status})</div>`;
    }
  });
}

loadRooms();
</script>
