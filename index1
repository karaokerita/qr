    <h2>üíÅ Nh√¢n vi√™n - Thanh to√°n</h2>
    <label for="roomSelect">Ch·ªçn ph√≤ng:</label>
    <select id="roomSelect"></select>

    <div id="amount" class="amount">S·ªë ti·ªÅn: 0 ƒë</div>

    <button onclick="markPaid()">ƒê√£ thanh to√°n</button>
  </div>

<script>
const API_URL = "https://script.google.com/macros/s/AKfycbyzfRB-aEGHX5Dq9C9_I30E9Mi5HDezEEghsMJDItFDoK-P99w2PiLHkLjSH41SKeJY/exec";

async function loadRooms() {
  const res = await fetch(API_URL);
  const data = await res.json();

  const select = document.getElementById("roomSelect");
  select.innerHTML = "";

  data.slice(1).forEach(row => {
    const [room, amount, status] = row;
    if (room) {
      let option = document.createElement("option");
      option.value = room;
      option.textContent = `${room} (${status})`;
      option.dataset.amount = amount;
      select.appendChild(option);
    }
  });

  updateAmount();
}

function updateAmount() {
  const select = document.getElementById("roomSelect");
  const amount = select.options[select.selectedIndex]?.dataset.amount || 0;
  document.getElementById("amount").textContent = "S·ªë ti·ªÅn: " + amount + " ƒë";
}

document.getElementById("roomSelect").addEventListener("change", updateAmount);

async function markPaid() {
  const room = document.getElementById("roomSelect").value;
  if (!room) return alert("Ch∆∞a ch·ªçn ph√≤ng!");

  await fetch(API_URL, {
    method: "POST",
    body: JSON.stringify({ action: "paid", room: room })
  });

  alert("‚úÖ ƒê√£ thanh to√°n ph√≤ng " + room);
  loadRooms();
}

loadRooms();
</script>
